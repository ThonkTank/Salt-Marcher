{
  "name": "salt-marcher",
  "version": "0.1.0",
  "description": "D&D world-building Obsidian plugin",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "node esbuild.config.mjs production",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest",
    "cli:generate": "tsx scripts/cli/generate.ts",
    "cli": "node scripts/cli/cli.mjs",
    "test:tournament": "npx tsx scripts/test-selectors.ts --tournament --selector greedy",
    "test:scenario:1v1": "npx tsx scripts/test-selectors.ts --tournament --scenario 0",
    "test:scenario:mixed": "npx tsx scripts/test-selectors.ts --tournament --scenario 1",
    "test:scenario:horde": "npx tsx scripts/test-selectors.ts --tournament --scenario 2",
    "test:scenario:aura": "npx tsx scripts/test-selectors.ts --tournament --scenario 3",
    "test:scenario:bloodied": "npx tsx scripts/test-selectors.ts --tournament --scenario 4",
    "test:scenario:kiting": "npx tsx scripts/test-selectors.ts --tournament --scenario 5",
    "test:scenario:healer": "npx tsx scripts/test-selectors.ts --tournament --scenario 6",
    "test:scenario:grapple": "npx tsx scripts/test-selectors.ts --tournament --scenario 7",
    "test:scenario:rampage": "npx tsx scripts/test-selectors.ts --tournament --scenario 8",
    "build:evolution": "node scripts/evolution/esbuild.evolution.mjs",
    "evolve": "npm run build:evolution && node dist/evolution/evolve.mjs",
    "evolve:dev": "npx tsx scripts/evolution/evolve.ts",
    "evaluate": "npm run build:evolution && node dist/evolution/evaluate.mjs",
    "evaluate:dev": "npx tsx scripts/evolution/evaluate.ts",
    "visualize": "npx tsx scripts/evolution/visualize.ts"
  },
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "esbuild": "^0.24.0",
    "eslint": "^9.17.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.6.1",
    "obsidian": "^1.7.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vitest": "^2.1.8"
  }
}
