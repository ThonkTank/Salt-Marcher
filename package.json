{
  "name": "Salt Marcher",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "main.js",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "test": "vitest run",
    "test:contracts": "vitest run tests/contracts",
    "test:integration": "node tests/integration/test-runner.mjs all",
    "test:integration:single": "node tests/integration/test-runner.mjs",
    "test:ui": "bash scripts/test-ui.sh",
    "test:ui:validate": "bash scripts/validate-field.sh",
    "test:all": "npm test && npm run test:contracts && npm run test:integration",
    "golden:update": "tsx tests/contracts/update-library-golden.ts",
    "ci:tests": "npm test && npm run test:contracts",
    "sync:todos": "node tools/sync-todos.mjs",
    "obsidian:reload": "node scripts/obsidian-cli.mjs reload-plugin",
    "obsidian:edit": "node scripts/obsidian-cli.mjs",
    "obsidian:logs": "node scripts/obsidian-cli.mjs get-logs"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "esbuild": "^0.21.5",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.0.0",
    "obsidian": "^1.6.0",
    "tsx": "^4.15.7",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  }
}
